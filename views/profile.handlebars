<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a new Blog Entry:</h3>

    <form class="form new-blogEntry-form">
      <div class="form-group">
        <label for="posttitle">Entry title:</label>
        <input class="form-input" type="text" id="posttitle" name="posttitle" />
      </div>
      <div class="form-group">
        <label for="date_created">Date Created:</label>
        <input class="form-input" type="text" id="date_created" name="date_created" />
      </div>
      
      <div class="form-group">
        <label for="entry">Entry:</label>
        <textarea class="form-input" id="entry" name="entry"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if blog.length}}
  <div class="col-md-6 blog-entries-list">
    <h3>Blog Entries:</h3>

    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blog/{{blog.id}}">{{blog.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
